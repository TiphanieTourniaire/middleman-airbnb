<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class=“banner” style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug%>'); height : 25vh; background-position: 25% 75%;">
</div>

<div class="header_flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="header_flat details">
          <div class="header_flat_owner text-center">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "flat_avatar" %>
            <p><%= flat.name %></p>
          </div>
          <div class="header_flat name">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <% flat.wifi? wf="Yes" ; wf="No" %>
            <p>Wifi : <%= wf%></p>
            <p>Rating: <%= flat.rating %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <form action="#" class="form-inline">
          <h4>Book this flat</h4>
          <div class="form-group">
            <label for="checkin">Check-in</label>
              <input type="date" id="checkin" class="form-control mx-sm-3">
            <label for="checkout">Check-out</label>
              <input type="date" id="checkout" class="form-control mx-sm-3">
            <select name id="guests" class="form-control mx-sm-3">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>  
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

    <div class="about">

    </div>

</div>


